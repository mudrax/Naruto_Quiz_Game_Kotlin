<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/quesactfoor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">


            <ImageButton
                android:id="@+id/ib_pause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:backgroundTint="#8B0EAC"
                android:onClick="pauseSound"
                app:srcCompat="@android:drawable/ic_lock_silent_mode"
                app:tint="@color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ques"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:text="Question111"
            android:textSize="32sp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_image"
            android:src="@drawable/questhree"
            android:layout_width="380dp"
            android:layout_height="350dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/pb_progressBar"
                android:progressTint="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="15"
                android:minHeight="50dp"
                android:progress="0"
                android:indeterminate="false"
                style="?android:attr/progressBarStyleHorizontal"
                />
            <TextView
                android:id="@+id/tv_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/5"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_optionOne"
            android:background="@drawable/custom_option_bg"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:elevation="5dp"
            android:text="naruro"
            />
        <TextView
            android:id="@+id/tv_optionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp"
            android:background="@drawable/custom_option_bg"
            android:gravity="center"
            android:layout_margin="16dp"
            android:text="naruro"
            />
        <TextView
            android:id="@+id/tv_optionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp"
            android:background="@drawable/custom_option_bg"
            android:gravity="center"
            android:layout_margin="16dp"
            android:text="naruro"
            />
        <TextView
            android:id="@+id/tv_optionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp"
            android:background="@drawable/custom_option_bg"
            android:gravity="center"
            android:layout_margin="16dp"
            android:text="naruro"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_act2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="button"
            android:textSize="24sp"
            android:textColor="#8E24AA"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:padding="18dp"
            />

    </LinearLayout>


</ScrollView>